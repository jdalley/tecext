{
  "manifest_version": 2,
  "name": "TEC Extender",
  "short_name": "tecext",
  "description": "Extensions and goodies for TEC",
  "version": "1",
  "browser_action": {
    "default_icon": "images/icon32.png" //, "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.skotos.net/*"],
      "js": ["js/teccontent.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["js/teccontent.js", "js/tecinj.js"],
  "permissions": [
    "contextMenus",
    "debugger",
    "background",
    "tabs",
    "storage",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com https://code.jquery.com https://stackpath.bootstrapcdn.com; object-src 'self';"
}