{
	"manifest_version": 3,
	"name": "TEC Extender",
	"short_name": "tecext",
	"description": "Extensions and goodies for The Eternal City",
	"version": "1.0.0",
	"action": {
		"default_icon": "images/icon32.png"
	},
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/logo48.png",
		"128": "images/logo128.png"
	},
	"background": {
		"service_worker": ["js/background.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["*://*.eternalcitygame.com/*"],
			"js": ["js/content.js"],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		{
			"matches": [
				"*://*.eternalcitygame.com/*"
			],
			"resources": [
				"js/content.js",
				"js/injected.js"
			]
		}
	],
	"permissions": [
		"contextMenus",
		"debugger",
		"background",
		"tabs",
		"storage",
		"activeTab"
	],
	"host_permissions": [
		"*://*.eternalcitygame.com/*"
	],
	"content_security_policy": {
		"script-src": "self",
		"object-src": "self"
	}
}